<div class="card">
    <div class="card-header" data-background-color="orange">
        <h4 class="title">Listes des groupes</h4>
        <p class="category">Nouveaux groupes publi√© 15th September, 2016</p>
    </div>
    <div class="card-content table-responsive">
        <table class="table table-hover">
            <thead class="text-warning">
                <th>Groupes</th>
            </thead>
            <tbody>
              {{# each groupes }}
                  <tr>
                      <td>{{ this.title }}</td>
                      <td><a href="/admin/groupes/update-groupe/{{this._id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                      <td>
                        <form action="/admin/groupes/delete-groupe-action" method="post">
                          <input type="hidden" id="_id" name="_id" value={{ this._id }}>
                          <button type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button>
                        </form>
                      </td>
                  </tr>
              {{/each}}
            </tbody>
        </table>
    </div>
</div>
